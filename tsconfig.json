{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"types": ["node"],
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"rootDirs": ["./src", "./library"],
		"resolveJsonModule": true ,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": false,
		"experimentalDecorators": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./dist",
		"declarationMap": true
	},
	"ts-node-dev": {
		// "files": true,
		"require": [
			"tsconfig-paths/register"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./library/**/src/**/*.ts",
		"./library/**/src/**/*.ts"
	],
	"exclude": [
		"./node_modules",
		"./resources"
	]
}